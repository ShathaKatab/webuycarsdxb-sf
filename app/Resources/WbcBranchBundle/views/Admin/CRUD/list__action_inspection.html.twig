{% if object.status == 'checked-in' or object.status == 'inspected' %}
    {% if object.inspection is not null and object.inspection != false %}
        <a href="{{ path('admin_wbc_branch_inspection_show', {id: object.inspection.id}) }}"
           class="btn btn-sm btn-info view_link"
           title="Show Inspection">
            Show Inspection
        </a>
    {% elseif is_granted('ROLE_ADMIN_BRANCH_INSPECTION_CREATE') %}
        <a href="{{ path('admin_wbc_branch_appointment_generateInspection', {id: object.id}) }}"
           class="btn btn-sm btn-danger view_link convert-to-inspection"
           title="Convert to Inspection">
            Convert to Inspection
        </a>
    {% endif %}
{% endif %}