{% extends '@WbcStatic/Default/base.html.twig' %}

{% block header %}
    <header>
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <h1>A bit more details</h1>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    {{ parent() }}
    <section>
        <div id="valuation-container" class="container text-center" ng-controller="ValuationStepTwoController as ctrl">
            <form name="valuationDetailsForm" ng-submit="ctrl.submitForm(valuationDetailsForm.$valid)" method="post" class="form" novalidate>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <select ng-model="ctrl.vehicleModelType" ng-class="{'form-control-invalid': valuationDetailsForm.$submitted && valuationDetailsForm.vehicleModelType.$invalid }" required name="vehicleModelType" class="form-control">
                                <option value="">Vehicle Trim</option>
                                {% for modelType in vehicleModelTypes %}
                                    <option value="{{ modelType.id }}">{{ modelType.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <select ng-model="ctrl.vehicleMileage" ng-class="{'form-control-invalid': valuationDetailsForm.$submitted && valuationDetailsForm.vehicleMileage.$invalid }"
                                    required name="vehicleMileage" class="form-control">
                                <option value="">Vehicle Mileage</option>
                                {% for key, mileage in getMileages() %}
                                    <option value="{{ key }}">{{ mileage }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <select ng-model="ctrl.vehicleColor" ng-class="{'form-control-invalid': valuationDetailsForm.$submitted && valuationDetailsForm.vehicleColor.$invalid }"
                                    required name="vehicleColor" class="form-control">
                                <option value="">Vehicle Color</option>
                                {% for key, color in getColors() %}
                                    <option value="{{ key }}">{{ color }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <select ng-model="ctrl.vehicleBodyCondition" ng-class="{'form-control-invalid': valuationDetailsForm.$submitted && valuationDetailsForm.vehicleBodyCondition.$invalid }"
                                    required name="vehicleBodyCondition" class="form-control">
                                <option value="">Vehicle Body Condition</option>
                                {% for key, condition in getBodyConditions() %}
                                    <option value="{{ key }}">{{ condition }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h1>And finally&hellip;</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <input ng-model="ctrl.name" ng-class="{'form-control-invalid': valuationDetailsForm.$submitted && valuationDetailsForm.name.$invalid }"
                                   required name="name" type="text" class="form-control" placeholder="Type your name">
                        </div>
                        <div class="form-group">
                            <input ng-model="ctrl.emailAddress" ng-class="{'form-control-invalid': valuationDetailsForm.$submitted && valuationDetailsForm.emailAddress.$invalid }"
                                   required name="emailAddress" type="email" class="form-control" placeholder="Type your email address">
                        </div>
                        <div class="form-group">
                            <input ng-model="ctrl.mobileNumber" ng-pattern="/^(0|((\+|00)?971))(50|52|54|55|56)\d{7}$/" ng-class="{'form-control-invalid': valuationDetailsForm.$submitted && valuationDetailsForm.mobileNumber.$invalid }"
                                   required name="mobileNumber" type="text" class="form-control" placeholder="Type your mobile phone number">
                        </div>
                        <div class="form-group submit">
                            <button type="submit" class="btn btn-primary btn-lg">See your Vehicle Value</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>

    {% include 'WbcStaticBundle:partials:section-text.html.twig' with {'title': 'Porta Fusce Vulputate', 'content': '<p>Basking shark burrowing goby scythe butterfish thorny catfish gombessa moonfish." Snoek spiny
                            eel jellynose
                            fish freshwater hatchetfish zebra tilapia black dragonfish hammerhead shark cornetfish
                            electric stargazer
                            dartfish velvet catfish.</p>'} %}

{% endblock %}