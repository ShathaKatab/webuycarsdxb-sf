{% extends '@WbcStatic/Default/base.html.twig' %}

{% block body %}

    {{ parent() }}

    {% include 'WbcStaticBundle:partials:valuation.html.twig' %}

    <section ng-controller="ValuationStepThreeController as ctrl"
             ng-init="ctrl.branches={{ getBranches()|serialize }}; ctrl.valuationId = '{{ valuation.id }}'">
        <div class="container">
            <div class="row">
                {% if form is not null %}
                    {{ form_errors(form) }}
                {% endif %}
                <div id="book-appointment-form" class="col-md-6 bg-grey">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="p-somatic color-dark">Book an Appointment</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <form name="valuationAppointmentForm"
                                  method="post"
                                  class="form-horizontal" novalidate>
                                <div class="form-group">
                                    <label class="col-md-6">Pick a Branch</label>

                                    <div class="col-md-6">
                                        <select ng-model="ctrl.selectedBranch"
                                                ng-class="{'form-control-invalid': valuationAppointmentForm.$submitted && valuationAppointmentForm.selectedBranch.$invalid }"
                                                class="form-control"
                                                required
                                                name="selectedBranch"
                                                ng-options="branch.slug as branch.name for branch in ctrl.branches">
                                            <option value="">Choose a Branch</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-6">Pick a Date</label>
                                    <div class="col-md-6">
                                        <div uib-datepicker
                                             class="angular-ui-datepicker"
                                             ng-model="ctrl.appointmentDate"
                                             name="appointmentDate"
                                             required
                                             ng-class="{'form-control-invalid': valuationAppointmentForm.$submitted && valuationAppointmentForm.appointmentDate.$invalid }"
                                             datepicker-options="options"></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-6">Pick a Timing</label>
                                    <div class="col-md-6">
                                        <select ng-model="ctrl.selectedBranchTiming" class="form-control"
                                                ng-options="branchTiming.id as branchTiming.name for branchTiming in ctrl.branchTimings"
                                                required
                                                name="selectedBranchTiming"
                                                ng-class="{'form-control-invalid': valuationAppointmentForm.$submitted && valuationAppointmentForm.selectedBranchTiming.$invalid }">
                                            <option value="">Choose a Branch Timing</option>
                                        </select>
                                    </div>
                                </div>
                            </form>
                            <p class="p-italic">Aenean eu leo quam. Pellentesque ornare sem lacinia quam venenatis
                                vestibulum.</p>
                        </div>
                    </div>
                </div>
                <div id="book-appointment-map" class="col-md-6" ng-style="{height: ctrl.mapHeight}">
                    <div map-lazy-load="https://maps.google.com/maps/api/js?key={{ google_maps_api_key }}"
                         map-lazy-load-params="">
                        <ng-map default-style="false" ng-style="{height: ctrl.mapHeight}"  id="map-lazy-load"></ng-map>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="book-appointment-button-container" class="col-md-4 col-md-offset-4">
                    <button ng-click="ctrl.triggerFormSubmit()" class="btn btn-lg btn-primary">Book an Appointment and Get Paid</button>
                </div>
            </div>
        </div>
    </section>

    {% include 'WbcStaticBundle:partials:section-text.html.twig' with {
    'title': 'Put some text here',
    'content': '<p>Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo.</p>'} %}

{% endblock %}
