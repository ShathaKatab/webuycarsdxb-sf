{% extends '@WbcStatic/Default/base.html.twig' %}
{% block title %}<title>Get Your Free online Car Valuation | {{ site_title }}</title>{% endblock %}
{% block meta %}
    <meta name="description" content="Free car valuation on WeBuyCarsDxb.com. Know your used car value in few seconds and book your appointment now. Purchase guaranteed.">
{% endblock %}

{% block header %}
    <header>
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <h1>Selling your car has never been easier!</h1>

                    {% if form is defined and form is not null %}
                        <div class="alert alert-danger" role="alert">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            <span class="sr-only">Errors:</span>
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    {{ parent() }}
    <section>
        <div id="valuation-container" class="container text-center">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    {% include 'WbcStaticBundle:partials:vertical-valuation-form.html.twig' %}
                </div>
            </div>
        </div>
    </section>

    {% include 'WbcStaticBundle:partials:section-text.html.twig' with {'title': 'Porta Fusce Vulputate', 'content': '<p>Basking shark burrowing goby scythe butterfish thorny catfish gombessa moonfish." Snoek spiny
