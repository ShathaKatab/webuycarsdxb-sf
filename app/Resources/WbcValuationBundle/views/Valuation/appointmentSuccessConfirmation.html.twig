{% extends '@WbcStatic/Default/base.html.twig' %}
{% block title %}<title>Get Your Free online Car Valuation | {{ site_title }}</title>{% endblock %}
{% block meta %}
    <meta name="description" content="Free car valuation on WeBuyCarsDxb.com. Know your used car value in few seconds and book your appointment now. Purchase guaranteed.">
{% endblock %}
{% block header %}
    <header>
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <h1>Hooray, {{ appointment.name }}!</h1>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}

    {{ parent() }}
    <span ng-controller="ValuationStepFourController as ctrl" ng-init="ctrl.branchName = '{{ appointment.branch.name }}'; ctrl.latitude = {{ appointment.branch.latitude}}; ctrl.longitude = {{ appointment.branch.longitude }}; ctrl.sitePhone = '{{ site_phone }}'">
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <p class="p-lg">
                        The appointment for your <span class="text-bold">{{ appointment.vehicleYear }} {{ appointment.vehicleMake.name }} {{ appointment.vehicleModel.name }}</span><br>
                        at <span class="text-bold">{{ appointment.branch.name }}, {{ appointment.branch.citySlug }}<br></span>
                        on <span class="text-bold">{{ appointment.dateBooked|date('l jS F Y') }}</span><br>
                        between <span class="text-bold">{{ appointment.branchTiming.timingString }}</span> is done
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="row">
                        <div class="col-md-6">
                            <button class="btn btn-lg btn-primary">Edit the Appointment</button>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-lg btn-default border-lg-dark-color">
                                <i class="fa fa-print" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;Print
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div id="appointment-confirmation-map-container" class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <h2>See how to get there and get paid</h2>
                </div>
            </div>
            <div class="row">
                <div id="appointment-confirmation-map" class="col-md-10 col-md-offset-1" style="height: 320px;">
                    <div map-lazy-load="https://maps.google.com/maps/api/js?key={{ google_maps_api_key }}"
                         map-lazy-load-params=""
                         map-center="[{{ appointment.branch.latitude }}, {{ appointment.branch.longitude }}]">
                        <ng-map default-style="false" ng-style="{height: '320px'}" id="map-lazy-load"></ng-map>
                    </div>
                </div>
            </div>
        </div>
    </section>


    {% include 'WbcStaticBundle:partials:section-text.html.twig' with {
    'title': 'Things to bring to your appointment',
    'content': '<ul>
                    <li class="text-left">Registration Card of Vehicle (Mulkiya)</li>
                    <li class="text-left">Driving License, Emirates ID, or Passport</li>
                    <li class="text-left">Your car service history booklet (if any)</li>
                    <li class="text-left">Original and spare car keys</li>
                    <li class="text-left">The Bank Release confirmation if your car is being financed by the bank</li>
                </ul>
                <p>If you have any questions, please feel free to call us on <a href="tel: {{ ctrl.sitePhone }}">{{ ctrl.sitePhone }}</a></p>
                '} %}
</span>
{% endblock %}