{% block header %}
    <header class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="h1">Our system could not generate a price. Our team will call you to provide you with a
                        valuation.</div>
                </div>
                <div class="col-md-12">
                    <h2>You may still book an appointment to have it manually valuated.</h2>
                </div>
                <div class="col-md-12">
                    <p>{{ valuation.vehicleYear }}
                        -&nbsp;{{ valuation.vehicleMake.name }}&nbsp;{{ valuation.vehicleModel.name }}&nbsp;{% if valuation.vehicleModelType is not null %}{{ '- ' ~ valuation.vehicleModelType.trim }}{% endif %}
                        -&nbsp;{{ valuation.vehicleMileage|number_format ~ ' kms' }}
                        -&nbsp;{{ valuation.vehicleColor|capitalize ~ ' Color' }}
                        -&nbsp;{{ valuation.vehicleBodyCondition|capitalize ~ ' Condition' }}</p>
                </div>
            </div>
        </div>
    </header>
{% endblock header %}