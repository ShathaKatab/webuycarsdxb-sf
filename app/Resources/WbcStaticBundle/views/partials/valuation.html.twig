{% block header %}
    <header class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Your Vehicle Value</h2>
                </div>
                <div class="col-md-4 col-md-offset-4">
                    <img src="{{ valuation.priceImageEncoded }}" class="inherit-margin-top img-responsive center-block valuation-price">
                </div>
                <div class="col-md-12">
                    <p>{{ valuation.vehicleYear  }} - {{ valuation.vehicleMake.name }} {{ valuation.vehicleModel.name }} {% if valuation.vehicleModelType is not null %}{{ '- ' ~ valuation.vehicleModelType.trim }}{% endif %} - {{ valuation.vehicleMileage|number_format ~ ' kms'}} - {{ valuation.vehicleColor|capitalize ~ ' Color' }} -  {{ valuation.vehicleBodyCondition|capitalize ~ ' Condition' }}</p>
                </div>
            </div>
        </div>
    </header>
{% endblock %}