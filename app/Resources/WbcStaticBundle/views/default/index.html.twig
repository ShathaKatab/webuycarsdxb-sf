{% extends '@WbcStatic/Default/base.html.twig' %}

{% block header %}
    <header>
        <div class="jumbotron container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="text-center">Selling your car should be as easy as 1 2 3!</h1>
                </div>
            </div>
            <div id="header-form">
                <div class="row">
                    <div class="col-md-5 col-md-offset-1">
                        <form class="form">
                            <div class="form-group">
                                <select class="form-control">
                                    <option value="">Vehicle Make</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="form-control">
                                    <option value="">Vehicle Model</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <select class="form-control">
                                    <option value="">Vehicle Year</option>
                                </select>
                            </div>
                            <div class="form-group submit">
                                <button type="submit" class="btn btn-primary btn-lg">Get FREE Online Valuation
                                </button>
                            </div>
                        </form>
                    </div>
                    <div id="jumbotron-steps-container" class="col-md-4 col-md-offset-1">
                        <div class="steps one">
                            <h2 class="number pull-left">1</h2>

                            <div class="description">Free Online Valuation</div>
                        </div>
                        <div class="steps two">
                            <h2 class="number pull-left">2</h2>

                            <div class="description">Book Appointment</div>
                        </div>
                        <div class="steps three">
                            <h2 class="number pull-left">3</h2>

                            <div class="description">Get Instant CASH!</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock %}

{% block body %}
    {{ parent() }}
    {% include 'WbcStaticBundle:partials:section-text.html.twig' with {'title': 'Porta Fusce Vulputate', 'content': '<p>Basking shark burrowing goby scythe butterfish thorny catfish gombessa moonfish." Snoek spiny
