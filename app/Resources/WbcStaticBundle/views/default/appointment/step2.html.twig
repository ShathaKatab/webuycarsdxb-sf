{% extends '@WbcStatic/Default/base.html.twig' %}

{% block header %}
    <header>
        <div class="container text-center">
            <div class="row">
                <div class="col-md-12">
                    <h1>A bit more details</h1>
                </div>
            </div>
        </div>
    </header>
{% endblock %}
{% block body %}
    {{ parent() }}
    <section>
        <div class="container text-center">
            <form class="form">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">

                        <div class="form-group">
                            <select class="form-control">
                                <option value="">Vehicle Trim</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control">
                                <option value="">Vehicle Mileage</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control">
                                <option value="">Vehicle Color</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control">
                                <option value="">Vehicle Body Condition</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h1>And finally&hellip;</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4">
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Type your name">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Type your email address">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Type your mobile phone number">
                        </div>
                        <div class="form-group submit">
                            <button type="submit" class="btn btn-primary btn-lg">See your Vehicle Value</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
    {% include 'WbcStaticBundle:partials:section-text.html.twig' with {'title': 'Porta Fusce Vulputate', 'content': '<p>Basking shark burrowing goby scythe butterfish thorny catfish gombessa moonfish." Snoek spiny
                            eel jellynose
                            fish freshwater hatchetfish zebra tilapia black dragonfish hammerhead shark cornetfish
                            electric stargazer
                            dartfish velvet catfish.</p>'} %}
{% endblock %}